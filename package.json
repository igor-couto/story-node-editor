{
    "name": "story-node-editor",
    "version": "1.0.0",
    "scripts": {
        "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-js true --minify-css true -o index.html index.html",
        "minify:css": "cleancss -o css/html.css css/html.css",
        "minify:js": "mkdir -p js && uglifyjs src/html.js src/node-shape.js lib/joint.js -o js/app.js",
        "build": "npm run minify:html && npm run minify:css && npm run minify:js"
    },
    "devDependencies": {
      "html-minifier": "^4.0.0",
      "clean-css-cli": "^5.3.2",
      "uglify-js": "^3.14.5"
    }
}